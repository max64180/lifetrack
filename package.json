{
  "name": "lifetrack",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "i18next": "^23.10.1",
    "react-i18next": "^14.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "firebase": "^10.7.1"
  },
  "scripts": {
    "dev": "vite",
    "build": "npm run test:unit -- --no-cache && vite build",
